{
  "name": "vite-preact-ts-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "storybook": "storybook dev",
    "typecheck": "tsc --build --noEmit",
    "check": "biome check",
    "check:ci": "biome ci",
    "test": "vitest --browser.headless --run --retry 3",
    "test:chromium": "vitest --browser=chromium",
    "test:firefox": "vitest --browser=firefox",
    "test:webkit": "vitest --browser=webkit",
    "build:app": "tsc --build && vite build",
    "build:storybook": "storybook build --output-dir public/storybook",
    "preview": "vite preview"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@tanstack/react-virtual": "^3.13.12",
    "class-variance-authority": "^0.7.1",
    "dexie": "^4.0.11",
    "preact": "^10.26.9",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "use-debounce": "^10.0.5",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@chromatic-com/storybook": "^4.1.1",
    "@preact/preset-vite": "^2.10.2",
    "@storybook/addon-a11y": "^9.1.5",
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/preact-vite": "^9.1.5",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.2.1",
    "@vitest/browser": "^3.2.4",
    "playwright": "^1.55.0",
    "storybook": "^9.1.5",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^3.2.4",
    "vitest-browser-preact": "^0.1.2"
  }
}
